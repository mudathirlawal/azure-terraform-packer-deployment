{   "type": "Microsoft.Authorization/policyDefinitions",
    "name": "deny-creation-of-untagged-resources",
    "properties": {
        "displayName": "Resource Tagging Policy",
        "description": "This policy prevents untagged resources from being created.",
        "mode": "Indexed",
        "metadata": {
            "version": "1.0.0",
            "category": "Locations"
        },
        "policyRule": {
            "if": {
                "not": {
                    "field": "location",
                    "in": "[parameters('allowedLocations')]"
                }
            },
            "then": {
                "effect": "deny"
            }
        }
    }
}