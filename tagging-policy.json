{   
    "id": "/providers/Microsoft.Authorization/policyDefinitions/deny-creation-of-untagged-resources",
    "type": "Custom",
    "name": "deny-creation-of-untagged-resources",
    "properties": {
        "displayName": "Resource Tagging Policy",
        "description": "This policy prevents untagged resources from being created on a subscription.",
        "mode": "Indexed",
        "metadata": {
            "version": "1.0.0",
            "category": "Tags"
        },
        "parameters": {
            "tagName": {
              "type": "String",
              "metadata": {
                "displayName": "Tag Name",
                "description": "Name of the tag, such as 'environment'"
              }
            },
            "tagValue": {
              "type": "String",
              "metadata": {
                "displayName": "Tag Value",
                "description": "Value of the tag, such as 'production'"
              }
            }
          },
          "policyRule": {
            "if": {
              "not": {
                "field": "[concat('tags[', parameters('tagName'), ']')]",
                "equals": "[parameters('tagValue')]"
             }
            },
            "then": {
                "effect": "deny"
            }
        }
    }
}
